<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.luko9.myapplication.Activity.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickedDetail"
        android:text="ALL SHOWS" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickedSearch"
        android:text="Search for shows" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickedSearchPeople"
        android:text="Search for people" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickedFavourite"
        android:text="FAVOURITE SHOWS" />


</LinearLayout>

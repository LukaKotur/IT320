<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luko9.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TvShows.DetailShowActivity" />
        <activity android:name=".TvShows.ListViewActivity" />
        <activity android:name=".TvShows.IndividualStuff.ActorProfileActivity" />
        <activity android:name=".TvShows.IndividualStuff.EpisodeProfileActivity" />
        <activity
            android:name=".Activity.SearchActivity"
            android:label="@string/title_activity_search"></activity>
        <activity android:name=".TvShows.FavouriteShowsListActivity" />
        <activity android:name=".Activity.SettingsActivity" />

        <receiver android:name=".Alarm.AlarmReceiver"/>
        <activity android:name=".Activity.SearchActorsActivity" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.luko9.myapplication.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/buttonTop300"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_border"
                android:drawableLeft="@drawable/outline_show_chart_black_36dp"
                android:drawablePadding="0dp"
                android:onClick="clickedDetail"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="Popular Shows" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_border"
                android:drawableLeft="@drawable/outline_tv_black_36dp"
                android:drawablePadding="0dp"
                android:onClick="clickedSearch"
                android:paddingLeft="25dp"
                android:paddingRight="30dp"
                android:text="Find a show" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_border"
                android:drawableLeft="@drawable/outline_recent_actors_black_36dp"
                android:drawablePadding="3dp"
                android:onClick="clickedSearchPeople"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Find Actors" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_border"
                android:drawableLeft="@drawable/outline_favorite_border_black_36dp"
                android:drawablePadding="0dp"
                android:onClick="clickedFavourite"
                android:paddingLeft="25dp"
                android:paddingRight="33dp"
                android:text="Favourites" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

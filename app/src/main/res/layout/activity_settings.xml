<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/toEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email address for notifications"
        android:padding="10dp"
        android:text="looko95@gmail.com" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="Enable Email notifications" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/aSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:onClick="clickedEmailNotifications"
            android:paddingLeft="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="Enable Push notifications" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/bSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:onClick="clickedPushNotifications"
            android:paddingLeft="15dp" />
    </LinearLayout>



</LinearLayout>